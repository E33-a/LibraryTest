<Window x:Class="LibraryManager.Desktop.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo PrÃ©stamo" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Seleccionar Usuario:" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbUsers" DisplayMemberPath="FullName" SelectedValuePath="Id" Height="30"/>
            
            <TextBlock Text="Seleccionar Libro:" FontWeight="Bold" Margin="0,15,0,5"/>
            <ComboBox x:Name="cmbBooks" DisplayMemberPath="Title" SelectedValuePath="Id" Height="30"/>
            
            <TextBlock x:Name="txtWarning" Text="" Foreground="Red" TextWrapping="Wrap" Margin="0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" Width="80" Margin="0,0,10,0" Click="btnCancel_Click"/>
                <Button Content="Aceptar" Width="80" Background="#FF007ACC" Foreground="White" Click="btnOk_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>