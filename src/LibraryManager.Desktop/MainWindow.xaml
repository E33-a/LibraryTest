<Window x:Class="LibraryManager.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Manager" 
        Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <!-- Vista de Login (visible al inicio) -->
        <Grid x:Name="LoginView" Background="#FFF0F0F0">
            <Border Background="White" 
                    CornerRadius="10" 
                    Width="350" 
                    Height="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="30"
                    BorderBrush="#FFDDDDDD" 
                    BorderThickness="1">
                
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="📚 Library Manager" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,30"
                               Foreground="#FF333333"/>
                    
                    <TextBlock Text="Usuario" FontWeight="SemiBold" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtUsername" Height="35" Padding="10,5" FontSize="14"/>
                    
                    <TextBlock Text="Contraseña" FontWeight="SemiBold" Margin="0,15,0,5"/>
                    <PasswordBox x:Name="txtPassword" Height="35" Padding="10,5" FontSize="14"/>
                    
                    <Button x:Name="btnLogin" 
                            Content="Iniciar Sesión" 
                            Height="40" 
                            Margin="0,25,0,10"
                            Background="#FF007ACC"
                            Foreground="White"
                            FontWeight="Bold"
                            Click="btnLogin_Click"/>
                    
                    <TextBlock x:Name="txtMessage" 
                               Text="" 
                               Foreground="Red" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                    
                    <TextBlock Text="Demo: admin / pass123" 
                               Foreground="Gray" 
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Vista Principal (oculta al inicio) -->
        <Grid x:Name="MainView" Visibility="Collapsed" Background="#FFECF0F1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menú lateral -->
            <Border Background="#FF2C3E50" Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="📚 Library Manager" 
                               Foreground="White" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Margin="20,20,20,30"
                               TextWrapping="Wrap"/>
                    
                    <Button Content="📖 Libros" 
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            HorizontalContentAlignment="Left"
                            FontSize="14"
                            Click="btnBooks_Click"/>
                    
                    <Button Content="👥 Usuarios" 
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            HorizontalContentAlignment="Left"
                            FontSize="14"
                            Click="btnUsers_Click"/>
                    
                    <Button Content="🔄 Préstamos" 
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            HorizontalContentAlignment="Left"
                            FontSize="14"
                            Click="btnLoans_Click"/>
                    
                    <Separator Margin="10,20" Background="#FF34495E"/>
                    
                    <TextBlock x:Name="txtUserInfo" 
                               Foreground="#FF95A5A6" 
                               Margin="20,10"
                               TextWrapping="Wrap"/>
                    
                    <Button Content="🚪 Cerrar Sesión" 
                            Foreground="#FFE74C3C"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20,15"
                            HorizontalContentAlignment="Left"
                            FontSize="14"
                            Click="btnLogout_Click"/>
                </StackPanel>
            </Border>

            <!-- Área de contenido -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Panel de acciones -->
                <StackPanel x:Name="ActionPanel" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                    <Button x:Name="btnNewLoan" Content="➕ Nuevo Préstamo" Padding="15,8" Background="#FF27AE60" Foreground="White" Click="btnNewLoan_Click"/>
                </StackPanel>
                
                <!-- Contenido -->
                <TextBlock x:Name="txtContent" Grid.Row="1"
                        Text="Bienvenido al sistema de gestión bibliotecaria"
                        FontSize="14"
                        TextWrapping="Wrap"/>
            </Grid>
        </Grid>
    </Grid>
</Window>